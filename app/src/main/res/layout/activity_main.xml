<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/bacck"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/alex2">

    <Button
        android:id="@+id/butCesta"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/butOblibMista"
        android:layout_marginStart="35dp"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/dest"
        android:onClick="planCesty"
        android:text="Naplanovat trasu"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/butOblibMista"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="35dp"
        android:layout_toEndOf="@+id/butMojePoloha"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/flag"
        android:onClick="pridatMisto"
        android:text="Oblibena mista"
        android:textColor="@color/white" />

    <Button
        android:id="@+id/butMojePoloha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@android:color/transparent"
        android:drawableTop="@drawable/placeholder"
        android:onClick="urcitPolohu"
        android:textColor="@color/white" />


</RelativeLayout>